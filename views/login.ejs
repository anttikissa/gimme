<!doctype html>
<meta charset=utf-8>
<title>Login to Gimme</title>
<link rel=stylesheet href='gimme-style.css'>
<link rel=stylesheet href='//netdna.bootstrapcdn.com/bootstrap/3.0.0/css/bootstrap.css'>
<body>

<form method='post' action='/login' class='form-inline' role='form'>
  <div class='form-group'>
    <label class='sr-only' for='user'>Email</label>
    <input type='email' class='form-control' id='user' placeholder='Enter email'>
  </div>
  <div class='form-group'>
    <label class='sr-only' for='password'>Password</label>
    <input type='password' class='form-control' id='password' placeholder='Password'>
  </div>
  <button type='submit' class='btn btn-default'>Login</button>
</form>
	
<% if (messages.length) { %>

	<div class='messages'>
	<% for (var i = 0; i < messages.length; i++) { %>
		<div class='message'><%= messages[i] %></div>
	<% } %>
	</div>

<% } %>
<!-- <button type='button' class='btn btn-primary btn-lg btn-block'>Register</button> -->

</body>
